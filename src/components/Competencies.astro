---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["flex flex-wrap gap-2", className]}>
  <slot />
</div>

<style>
  div :global(> *) {
    @apply inline-flex items-center px-2.5 py-1 text-xs font-medium bg-zinc-900/50 text-zinc-300 border border-zinc-800/50 rounded-md hover:bg-zinc-800/50 hover:border-zinc-700/50 transition-all duration-200;
  }
</style>
